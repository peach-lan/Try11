<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@color/darkbule"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bg"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/ll_anchor_left"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/ll_anchor_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:src="@mipmap/t2" />

                <LinearLayout
                    android:id="@+id/ll_userInfo"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_userInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right_1" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#9FEDF3F6"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bill"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:src="@mipmap/pm1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="账单"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_selectBill"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_selectList"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="流水查询"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_surplus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_surplus"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="余额"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="200.00"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cardBag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="卡包"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_cardBag"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="分享"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#9FEDF3F6"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cardApplication"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_cardApplication"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="我的卡申请"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cardVerify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_cardVerify"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/pm8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="我的卡审核"
                android:textColor="@color/black" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="帮助中心"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/btn_help1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/right_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#9FEDF3F6"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/darkbule"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>