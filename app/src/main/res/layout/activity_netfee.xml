<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/darkbule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="93dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/fanhui">
        </ImageView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            android:text="交网费"
            android:textSize="24dp"
            android:textColor="#ffffff"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/charge_system"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="缴费系统:深澜软件"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/zhaohao"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="账号明细："
                android:textSize="20dp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp" />
        <TextView
            android:id="@+id/pay_manner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="支付方式                                                  卡账户"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/jiaofeijinge"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="缴费金额："
                android:textSize="20dp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="2"
            android:padding="3dip">
            <LinearLayout>
                <Button
                    android:id="@+id/bt_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/bt_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/bt_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="100"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="150" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="200" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="300" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10sp" />
            <Button
                android:id="@+id/charge_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/darkbule"
                android:textColor="#ffffff"
                android:text="确认缴费"
                android:textSize="30dp"/>
        </TableLayout>

    </LinearLayout>

</LinearLayout>