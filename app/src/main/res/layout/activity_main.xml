<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:background="#104E8B"
            android:gravity="center"
            android:text="@string/applicenter"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:background="#DCDCDC"
            android:text="@string/compuscard"
            android:textColor="#778899"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt_bill"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo1"
                android:scaleType="centerCrop"
                android:background="@mipmap/bill" />

            <ImageButton
                android:id="@+id/bt_netfee"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/netfee"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_bankcard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/bankcard"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_cardcharge"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/cardcharge"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_changepassword"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/changepassword"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_balancequery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/balancequery"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_pipelinequery"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/pipelinequery"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_carduncoupling"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/cardcoupling"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/bt_cardloss"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/cardloss"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>



